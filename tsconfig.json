{
    "extends": "@pentible/tsconfig",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "jsx": "preserve"
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
